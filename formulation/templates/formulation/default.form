Fields not derived from InputField:

{% block MultipleHiddenInput %}
{% for value in value %}
<input type="hidden" name="{{ name }}" id="{{ id }}_{{ forloop.counter0 }}" value="{{ value }}" {{ widget.attrs|flat_attrs }} {{ required|yesno:"required," }}>
{% endfor %}
{% endblock %}

{% block Textarea %}
{% use "_label" %}
<textarea name="{{ html_name }}" id="{{ id }}"
    class="{{ css_classes }} {{ errors|yesno:"error," }}"
    {{ required|yesno:"required," }}
    {{ autofocus|yesno:"autofocus," }}
    {% if placeholder %}placeholder="{{ placeholder }}"{% endif %}
    {{ widget.attrs|flat_attrs }}
>{{ value }}</textarea>
{% use "_help" %}
{% use "_errors" %}
{% endblock %}

{% block Select %}
{% use "_label" %}
<select name="{{ html_name }}" id="{{ id }}" {{ widget.attrs|flat_attrs }}>
{% for val, display in choices %}
    <option value="{{ val }}" {% if value == value|default:None %}selected{% endif %}>{{ display }}</option>
{% endfor %}
</select>
{% use "_help" %}
{% use "_errors" %}
{% endblock %}

{% block SelectMultiple %}
{% use "_label" %}
<select name="{{ html_name }}" id="{{ id }}" {{ widget.attrs|flat_attrs }} multiple>
{% for val, display in choices %}
    <option value="{{ val }}" {% if val in value %}selected{% endif %}>{{ display }}</option>
{% endfor %}
</select>
{% use "_help" %}
{% endblock %}
{% block NullBooleanSelect %}{% use "Select" %}{% endblock %}

Checkbox is a special case and needs its own template.
{% block CheckboxInput %}
<label for="{{ form_field.id_for_label }}" class="{{ css_classes }}">
    <input name="{{ html_name }}" id="{{ id }}" type="checkbox" {{ form_field.value|yesno:'checked,' }}>
    {{ form_field.label }}
</label>
{% use '_help' %}
{% use '_errors' %}
{% endblock %}

{% block RadioSelect %}
{% use "_label" %}
<ul id="{{ id }}">
{% for val, dispaly in choices %}
    <li><input type="radio" id="{{ id}}_{{ forloop.counter0 }}" value="{{ val }}" {% if val == value|default:"" %}checked{% endif %}></li>
{% endfor %}
</ul>
{% use "_help" %}
{% use "_errors" %}
{% endblock %}

{% block CheckboxSelectMultiple %}
{% use "_label" %}
<ul id="{{ id }}">
{% for val, dispaly in choices %}
    <li><input type="checkbox" id="{{ id}}_{{ forloop.counter0 }}" value="{{ val }}" {% if val in value %}checked{% endif %}></li>
{% endfor %}
</ul>
{% use "_help" %}
{% use "_errors" %}
{% endblock %}
