Fields not derived from InputField:

{% block MultipleHiddenInput %}
{% for value in value %}
<input type="hidden" name="{{ name }}" id="{{ id }}_{{ forloop.counter0 }}" value="{{ value }}" {{ widget.attrs|flat_attrs }} {{ required|yesno:"required," }}>
{% endfor %}
{% endblock %}

{% block Textarea %}
{% use "_label" %}
<textarea name="{{ html_name }}" id="{{ id }}"
    class="{{ css_classes }} {{ errors|yesno:"error," }}"
    {{ required|yesno:"required," }}
    {% if placeholder %}placeholder="{{ placeholder }}"{% endif %}
    {{ widget.attrs|flat_attrs }}
>{{ value }}</textarea>
{% use "_help" %}
{% endblock %}

{% block Select %}
{% use "_label" %}
<select name="{{ html_name }}" id="{{ id }}" {{ widget.attrs|flat_attrs }} {{ multiple|yesno:"multiple," }}>
{% for val, display in choices %}
    <option value="{{ val }}" {% if value == value|default:None %}selected{% endif %}>{{ display }}</option>
{% endfor %}
</select>
{% use "_help" %}
{% endblock %}

{% block SelectMultiple %}{% use "Select" multiple=True %}{% endblock %}
{% block NullBooleanSelect %}{% use "Select" %}{% endblock %}
