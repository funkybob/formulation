
Default, basic form rendering


# Helper to render attributes
{% block _attrs %}
{% for key, val in attrs.items %} {{key}}="{{val}}"{% endfor %}
{% endblock %}

{% block _label %}
{% if not nolabel %}{{ label_tag }}{% endif %}
{% endblock %}

{% block _help %}
{% if not nohelp %}{{ help_text }}{% endif %}
{% endblock %}

{% block input %}
{% use "_label" %}
<input type="{{ field_type|default:"text" }}"
    name="{{ html_name }}"
    id="{{ id }}"
    {% if not field_type|default:"text" == "password" %}value="{{ value|default:"" }}"{% endif %}
    class="{{ css_classes }} {{ errors|yesno:"error," }}"
    {% use "_attrs" attrs=widget.attrs %}
    {% if placeholder %}placeholder="{{ placeholder }}"{% endif %}
>
{% use "_help" %}
{% endblock %}

{% block textarea %}
{% use "_label" %}
<textarea name="{{ html_name }}" id="{{ id }}" {% use "_attrs" attrs=widget.attrs %} >{{ value }}</textarea>
{% use "_help" %}
{% endblock %}

{% block select %}
{% use "_label" %}
<select name="{{ html_name }}" id="{{ id }}" {% use "_attrs" attrs=widget.attrs %} >
{% for val, display in choices %}
    <option value="{{ val }}" {% if value == value|default:None %}selected{% endif %}>{{ display }}</option>
{% endfor %}
</select>
{% use "_help" %}
{% endblock %}

